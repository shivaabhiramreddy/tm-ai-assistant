{
  "name": "AI Scheduled Report",
  "module": "AskERP",
  "doctype": "DocType",
  "document_type": "Document",
  "engine": "InnoDB",
  "field_order": [
    "user",
    "report_name",
    "description",
    "report_query",
    "frequency",
    "export_format",
    "email_recipients",
    "active",
    "section_tracking",
    "last_generated",
    "creation"
  ],
  "fields": [
    {
      "fieldname": "user",
      "fieldtype": "Link",
      "label": "User",
      "options": "User",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "report_name",
      "fieldtype": "Data",
      "label": "Report Name",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "description",
      "fieldtype": "Small Text",
      "label": "Description"
    },
    {
      "fieldname": "report_query",
      "fieldtype": "Text",
      "label": "Report Query",
      "reqd": 1,
      "description": "The natural language query that will be sent to the AI engine to generate this report"
    },
    {
      "fieldname": "frequency",
      "fieldtype": "Select",
      "label": "Frequency",
      "options": "daily\nweekly\nmonthly\nhourly",
      "default": "daily",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "export_format",
      "fieldtype": "Select",
      "label": "Export Format",
      "options": "pdf\nexcel",
      "default": "pdf"
    },
    {
      "fieldname": "email_recipients",
      "fieldtype": "Small Text",
      "label": "Email Recipients",
      "description": "Comma-separated email addresses. Report owner is always included."
    },
    {
      "fieldname": "active",
      "fieldtype": "Check",
      "label": "Active",
      "default": 1,
      "in_list_view": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "section_tracking",
      "fieldtype": "Section Break",
      "label": "Tracking"
    },
    {
      "fieldname": "last_generated",
      "fieldtype": "Datetime",
      "label": "Last Generated",
      "read_only": 1,
      "in_list_view": 1
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1
    },
    {
      "role": "All",
      "read": 1,
      "write": 1,
      "create": 1,
      "if_owner": 1
    }
  ],
  "sort_field": "creation",
  "sort_order": "DESC",
  "track_changes": 0,
  "naming_rule": "autoincrement",
  "autoname": "autoincrement"
}
